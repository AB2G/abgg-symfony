{% block header %}{% endblock %}
{% block body -%}
<h1>Choisissez votre tournoi</h1>

<table class="records_list">
  <tbody>
    {% for entity in entities %}
    <tr>
      <a href="{{ path('game_selected', { 'id': entity.id }) }}">
  		<img src="{{ asset('bundles/app/images/'~entity.systName~'.png') }}" />
      </a>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
