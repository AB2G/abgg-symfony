{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Username</th>
                <th>Ranking</th>
                <th>UnderRanking</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.username }}</td>
                <td>{{ entity.experience.ranking }}</td>
                <td>{{ entity.experience.underRanking }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
