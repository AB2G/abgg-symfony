						      	<li>
							      	<a href="{{ path('fos_user_security_login' )}}">
							      		<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
							      			S'inscrire au tournoi
							        </a>
							    </li>
						      {%endif%}
						  </ul>
		            </li>
		            <li>
		            	<a href="{{ path('faq') }}">
		            		<span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
