			          {% else %}
			         	  <li><a class="btn btn-inverse" href="{{ path('fos_user_registration_register') }}">
			         	  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
			         	  Inscription</a></li>
			         	  <li><a class="btn btn-inverse" href="{{ path('fos_user_security_login') }}">
				          <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
				          Connexion</a></li>
			          {% endif %}
			          <li>
			          	  <a class="btn btn-inverse" href="{{path('mail')}}">
			          	  	<abbr title="Envoyez un mail aux responsables tournois">
						      <span class="glyphicon glyphicon-question-sign"></span>
						    </abbr>
						  </a>
			          </li>
		          </ul>
	        	</div>
	        </div>
	      </div>
